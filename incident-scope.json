{
  "service": "storage_service",
  "time_window": {
    "start": "2015-03-16T23:15:00Z",
    "end": "2015-03-16T23:20:00Z"
  },
  "repositories": [
    "."
  ],
  "commit_window": {
    "before": 10000,
    "after": 5
  },
  "paths": [],
  "log_policy": {
    "min_severity": "WARN",
    "lifecycle_events": true,
    "event_allowlist": [
      "service_start",
      "service_shutdown",
      "resource_allocation_failure",
      "io_error",
      "process_crash",
      "registration",
      "performance_degradation"
    ],
    "include_components": ["storage_service"]
  },
  "metric_policy": {
    "include": ["memory_mb", "error_rate_pct"]
  }
}
